---
/**
 * Base Layout
 *
 * Terminal TUI layout wrapper for all pages.
 * Wraps content in terminal-frame (visual) + terminal-tui (functional).
 */

// Import global styles (includes Tailwind)
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '29th Floor - Creative work by Daniel McFarland' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} | 29th Floor</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;700&display=swap" rel="stylesheet" />

  <style>
    /* Full viewport terminal */
    html, body {
      height: 100%;
      margin: 0;
      overflow: hidden;
      background: #011518;
    }

    terminal-frame {
      height: 100%;
    }

    /* Page content styling */
    .page-content {
      color: #26A69A;
      background: transparent;
    }

    .page-content h1,
    .page-content h2,
    .page-content h3 {
      color: #FFD600;
    }

    .page-content a {
      color: #26A69A;
    }

    .page-content a:hover {
      color: #FFD600;
    }
  </style>
</head>
<body>

  <terminal-frame title="29F_ TERMINAL v2.0">
    <terminal-tui page-title={title.toUpperCase()}>
      <div class="page-content">
        <slot />
      </div>
    </terminal-tui>
  </terminal-frame>

  <!-- Terminal components -->
  <script src="/src/components/terminal-frame.js"></script>
  <script src="/src/components/terminal-output.js"></script>
  <script src="/src/components/terminal-menu.js"></script>
  <script src="/src/components/terminal-prompt.js"></script>
  <script src="/src/components/terminal-tui.js"></script>

</body>
</html>
